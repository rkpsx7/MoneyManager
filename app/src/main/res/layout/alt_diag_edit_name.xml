<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#141414"
    app:strokeColor="@color/messenger_blue"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_details_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="Edit your name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:background="@color/messenger_blue" />

        <EditText
            android:id="@+id/et_new_name_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:padding="12dp"
            android:layout_marginStart="12dp"
            android:hint="Enter new name"
            android:layout_marginEnd="12dp"
            android:textColorHint="@color/light_grey"
            android:textColor="@color/wht"
            android:textStyle="italic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/alt_btn_update_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="12dp"
                android:text="Update"
                android:textColor="@color/messenger_blue"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/alt_btn_cancel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="12dp"
                android:text="Cancel"
                android:textColor="@color/wht"
                android:textSize="18sp"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>