<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".views.NewExpenseAddFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="Edit Expense Details"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etEditExpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Title..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etEditExpDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Description..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etEditExpDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Date..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etEditExpAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Amount spent..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnUpdateExp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/messenger_blue"
        android:text="Update"
        android:textAllCaps="false"
        android:textStyle="italic" />


</LinearLayout>