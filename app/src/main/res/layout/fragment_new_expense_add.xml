<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".Fragments.NewExpenseAddFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="Add New Expense"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etExpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Title..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etExpDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Description..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etExpDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Date..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etExpAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Amount spent..."
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnAddExp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/messenger_blue"
        android:text="Add to list"
        android:textAllCaps="false"
        android:textStyle="italic" />


</LinearLayout>