<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".views.expense.NewExpensesAdd">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/expenses" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="Add New Expense"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etExpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Title..."
        android:padding="12dp"
        android:textSize="15sp"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etExpDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Description (optional)"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="15sp"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etExpDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_background"
            android:hint="Date..."
            android:inputType="date"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/visible_grey"
            android:textSize="15sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/btn_select_date_exp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/calender_icon" />
    </RelativeLayout>


    <EditText
        android:id="@+id/etExpAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        android:background="@drawable/edittext_background"
        android:gravity="start"
        android:hint="Amount spent..."
        android:padding="12dp"
        android:textSize="15sp"
        android:textColorHint="@color/visible_grey"
        android:textStyle="italic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddExp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/add_to_list_btn_background"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="italic" />


</LinearLayout>